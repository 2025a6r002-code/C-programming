      * 
    * *
  * * *
* * * *


#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int N;
    scanf("%d",&N);
    for(int i=1; i<=N; i++){
        for (int j=1; (j<=N-i) ; j++){
            printf("  ");
        }
        for(int z=1; z<=i; z++){
            printf("* ");
        }
        printf("\n");
    }
    return 0;
}
