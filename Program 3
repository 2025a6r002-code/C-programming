//WAP to calculate the area and perimeter of circle, sqaure and rectangle.

#include<stdio.h>
int main(){
    int radius, side, length ,width;
    float area, perimeter;
    //circle 
    printf("Enter the radius of the circle=");
    scanf("%d",&radius);
    perimeter = 2*3.14*radius;
    area= 3.14*radius*radius;
    printf("area of the circle=%f\n",area);
    printf("Perimeter of the circle=%f\n\n",perimeter);
   
    printf("Enter the side of the square=");
    scanf("%d",&side);
     perimeter=4*side;
    area=side*side;
    printf("Area of square=%f\n",area);
    printf("Perimeter of the square=%f\n\n",perimeter);
    
    printf("Enter the length of the rectangle=");
    scanf("%d",&length);
    printf("Enter the width of the rectangle=");
    scanf("%d",&width);
    area=length*width;
    perimeter=2*(length+width);
    printf("Area of the rectangle=%f\n",area);
    printf("The perimeter of the rectangle=%f\n",perimeter);
    return 0;
}
