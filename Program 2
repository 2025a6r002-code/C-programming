//WAP to perform addition, subtraction, multiplication and divison on the two random numbers.

#include<stdio.h>
int main(){
    int a,b,sum,difference,product,remainder;
    printf("enter number1 and number2=");
    scanf("%d%d",&a,&b);
    sum=a+b;
    printf("Sum = %d\n",sum);
    difference=a-b;
    printf("Difference = %d\n",difference);
    product=a*b;
    printf("Product = %d\n",product);
    remainder=a*b;
    printf("Remainder = %d",remainder);
     return 0;

}
